{
  "manifest_version": 2,
  "name": "News Deframer Host",
  "version": "0.1.0",
  "description": "Host extension for News Deframer",
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "options.html",
    "default_title": "News Deframer Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "assets/*"
  ]
}
