{
  "name": "news-deframer",
  "version": "0.1.0",
  "description": "Browser extension to deframe news sites",
  "scripts": {
    "test": "jest",
    "build": "npm run build:lib && npm run build:host",
    "build:lib": "webpack --config webpack.lib.js",
    "build:host": "webpack --config webpack.host.js",
    "dev": "concurrently \"npm run dev:lib\" \"npm run dev:host\"",
    "dev:lib": "webpack serve --config webpack.lib.js",
    "dev:host": "webpack --config webpack.host.js --watch",
    "pack": "cd dist/host && zip -r ../../extension.zip .",
    "clean": "rm -rf dist extension.zip"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
