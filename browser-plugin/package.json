{
  "name": "news-deframer",
  "version": "0.1.0",
  "description": "Objectively analyzes news articles for journalistic quality, rewriting headlines to remove bias, framing, and sensationalism.",
  "scripts": {
    "test": "jest",
    "lint": "eslint src",
    "build": "webpack",
    "dist": "npm run clean && npm run build && cd dist/host && zip -r ../../extension.zip .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "dev": "echo \"Starting webpack watch. Run 'npm run type-check:watch' in a separate terminal for type checking.\" && webpack --watch",
    "pack": "cd dist/host && zip -r ../../extension.zip .",
    "clean": "rm -rf dist extension.zip",
    "render:article": "ts-node -O '{\"module\":\"commonjs\",\"jsx\":\"react\",\"esModuleInterop\":true}' src/ndf/scripts/render-to-html.tsx src/debug/article.json article",
    "render:portal": "ts-node -O '{\"module\":\"commonjs\",\"jsx\":\"react\",\"esModuleInterop\":true}' src/ndf/scripts/render-to-html.tsx src/debug/portal.json portal"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "^0.1.36",
    "@types/jest": "^30.0.0",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.3.0",
    "html-webpack-plugin": "^5.6.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "loglevel-plugin-prefix": "^0.8.4",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "loglevel": "^1.9.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-i18next": "^16.5.4",
    "tldts": "^7.0.21"
  }
}
